<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	xmlns:app="http://schemas.android.com/apk/res-auto">
	<RelativeLayout android:id="@+id/settings"
		android:background="@color/white"
		android:layout_width="match_parent"
		android:layout_height="match_parent" >

		<RelativeLayout android:id="@+id/content_container"
			android:layout_width="match_parent"
			android:background="@color/white"
			android:layout_height="wrap_content" >


			<RelativeLayout android:id="@+id/top_bar"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				app:layout_constraintTop_toTopOf="parent"
				app:layout_constraintLeft_toLeftOf="parent"
				app:layout_constraintRight_toRightOf="parent"
				android:paddingBottom="10dp"
				android:background="@color/white"
				>
				<RelativeLayout android:id="@+id/back_btn"
					android:layout_marginTop="22dp"
					android:layout_marginStart="25dp"
					android:layout_centerVertical="true"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					>


					<View   android:id="@+id/rectangle_3"
						android:background="@drawable/btn_burgundy"
						android:layout_marginStart="0dp"
						android:layout_marginTop="0dp"
						android:layout_width="40dp"
						android:layout_height="35dp" />


					<ImageView android:id="@+id/vector"
						android:src="@drawable/vector"
						android:contentDescription="vector"
						android:layout_centerHorizontal="true"
						android:layout_centerVertical="true"
						android:layout_width="15dp"
						android:layout_height="15dp" />



				</RelativeLayout>


				<TextView android:id="@+id/settings_1"
					android:textStyle="bold"
					android:layout_gravity="center_horizontal|center"
					android:gravity="center"
					android:layout_centerHorizontal="true"
					android:textSize="20sp"
					android:textColor="@color/burgundy"
					android:layout_centerVertical="true"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="@string/settings_string"
					/>

			</RelativeLayout>

			<TextView android:id="@+id/setup_account"
				android:textStyle="bold"
				android:textSize="16sp"
				android:textColor="@color/_bg__group_1_ek1_color"
				android:layout_marginLeft="24dp"
				android:layout_marginTop="80dp"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/setup_account_string"
				 />

			<TextView android:id="@+id/security"
				android:textStyle="bold"
				android:textSize="16sp"
				android:textColor="@color/black"
				android:layout_marginLeft="24dp"
				android:layout_marginTop="10dp"
				android:layout_below="@+id/delete"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/security_string"
				 />


			<RelativeLayout android:id="@+id/delete"
				android:layout_marginTop="10dp"
				android:layout_marginStart="20dp"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_centerHorizontal="true"
				android:layout_marginEnd="20dp"
				android:layout_below="@+id/setup_account"
				android:background="@drawable/rectangle_lightpink_radius"
				>

				<TextView android:id="@+id/delete_account"
					android:textSize="16sp"
					android:textColor="@color/burgundy"
					android:layout_marginLeft="48dp"
					android:layout_marginTop="2dp"
					android:layout_width="wrap_content"
					android:layout_height="42.6dp"
					android:text="@string/delete_account_string"
					android:layout_centerVertical="true"
					android:gravity="center_vertical"
					 />

				<ImageView android:id="@+id/user_1"
					android:src="@drawable/user_1"
					android:contentDescription="user_1"
					 android:layout_marginStart="19dp"
					android:layout_marginTop="10dp"
					android:layout_width="20dp"
					android:layout_height="20dp"
					android:layout_centerVertical="true"
					android:gravity="center_vertical"/>

			</RelativeLayout>

			<RelativeLayout android:id="@+id/change"
				android:layout_marginTop="10dp"
				android:layout_marginStart="20dp"
				android:layout_marginEnd="20dp"
				android:layout_below="@+id/security"
				android:layout_centerHorizontal="true"
				android:background="@drawable/rectangle_lightpink_radius"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				>


				<TextView android:id="@+id/change_passsword"
					android:textSize="16sp"
					android:textColor="@color/burgundy"
					android:layout_marginLeft="48dp"
					android:layout_marginTop="2dp"
					android:layout_width="226.6dp"
					android:layout_height="42.6dp"
					android:layout_centerVertical="true"
					android:gravity="center_vertical"
					android:text="@string/change_passsword_string"
					 />

				<ImageView android:id="@+id/padlock_1"
					android:src="@drawable/padlock_1"
					android:contentDescription="padlock_1"
					android:layout_marginStart="19dp"
					android:layout_marginTop="7dp"
					android:layout_width="20dp"
					android:layout_height="20dp"
					android:layout_centerVertical="true"
					android:gravity="center_vertical"
					/>

				<ImageView android:id="@+id/right_arrow_12"
					android:src="@drawable/right_arrow_3"
					android:contentDescription="right_arrow_12"
					android:layout_alignParentRight="true"
					android:layout_marginTop="13dp"
					android:layout_width="15dp"
					android:layout_height="15dp"
					android:layout_marginRight="15dp"
					android:layout_centerVertical="true"
					android:gravity="center_vertical"/>

			</RelativeLayout>

		</RelativeLayout>

	</RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>