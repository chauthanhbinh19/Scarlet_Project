<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >

        <View   android:id="@+id/rectangle_9"
            android:background="@drawable/_bg__white"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:layout_width="match_parent"
            android:layout_height="130dp" />

        <ImageView android:id="@+id/mask_group"
            android:layout_marginStart="16dp"
            android:layout_marginTop="5.5dp"
            android:layout_width="110dp"
            android:background="@drawable/rectangle_lightpink_radius"
            android:layout_height="110dp" />

        <ImageView android:id="@+id/product_image"
            android:src="@drawable/dsc02313_optimized"
            android:layout_marginStart="20dp"
            android:layout_marginTop="1dp"
            android:layout_width="105dp"
            android:layout_height="105dp" />

        <ImageView android:id="@+id/product_category_icon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/product_image"
            />

        <TextView android:id="@+id/product_name"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/burgundy"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/product_category_icon"
            android:layout_width="wrap_content"
            android:layout_height="24.2dp"
            android:maxWidth="140dp"
            android:text="@string/black_coffee_string"
            android:singleLine="true"
            />

        <TextView android:id="@+id/product_price"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:layout_marginLeft="32dp"
            android:layout_width="90.2dp"
            android:layout_height="20.2dp"
            android:layout_toRightOf="@id/product_image"
            android:layout_below="@id/product_name"
            android:layout_marginTop="50dp"
            android:text="@string/_120_000__string"
            />

        <ImageView android:id="@+id/add_btn"
            android:src="@drawable/plus_1"
            android:layout_alignParentRight="true"
            android:layout_marginTop="40dp"
            android:layout_marginRight="20dp"
            android:layout_width="30dp"
            android:layout_height="30dp" />

    </RelativeLayout>
