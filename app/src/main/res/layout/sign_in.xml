<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent" android:layout_height="wrap_content" >
	<RelativeLayout android:id="@+id/sign_in"
		android:layout_width="match_parent"
		android:layout_height="match_parent" >

		<RelativeLayout android:id="@+id/content_container"
			android:background="@color/lightpink"
			android:layout_width="match_parent"
			android:layout_height="match_parent" >

			<ImageView
				android:id="@+id/mask_group"
				android:layout_width="match_parent"
				android:layout_height="220dp"
				android:layout_marginStart="-25dp"
				android:layout_marginTop="-10dp"
				android:background="@drawable/signin" />

			<TextView android:id="@+id/sign_in_1"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center_horizontal|center"
				android:layout_centerHorizontal="true"
				android:layout_marginTop="0dp"
				android:layout_below="@+id/mask_group"
				android:gravity="center"
				android:text="Sign In"
				android:textColor="@color/sign_in_color"
				android:textSize="45sp" />

			<EditText android:id="@+id/password"
				android:textSize="14sp"
				android:textColor="@color/lightbrown"
				android:layout_marginLeft="70dp"
				android:layout_marginTop="15dp"
				android:layout_width="match_parent"
				android:layout_centerHorizontal="true"
				android:layout_height="48dp"
				android:layout_below="@+id/username_or_email"
				android:hint="@string/password_string"
				android:paddingLeft="40dp"
				android:inputType="textPassword"
				android:background="@drawable/rectangle_white_stroke"
				 />

			<ImageView
				android:layout_width="22dp"
				android:layout_height="22dp"
				android:layout_marginTop="26dp"
				android:layout_below="@+id/username_or_email"
				android:layout_marginLeft="45dp"
				android:background="@drawable/padlock"/>

			<EditText android:id="@+id/username_or_email"
				android:textSize="14sp"
				android:textColor="@color/lightbrown"
				android:layout_marginLeft="70dp"
				android:layout_marginTop="15dp"
				android:layout_width="match_parent"
				android:layout_centerHorizontal="true"
				android:layout_height="48dp"
				android:hint="Email"
				android:layout_below="@+id/sign_in_1"
				android:paddingLeft="40dp"
				android:background="@drawable/rectangle_white_stroke"
				 />

			<ImageView
				android:layout_width="22dp"
				android:layout_height="22dp"
				android:layout_marginTop="30dp"
				android:layout_marginLeft="45dp"
				android:layout_below="@+id/sign_in_1"
				android:background="@drawable/user_2"/>

			<Button android:id="@+id/sign_in_button"
				android:text="@string/sign_in_ek1_string"
				android:textStyle="bold"
				android:textColor="@color/white"
				android:layout_gravity="center_horizontal|center"
				android:gravity="center"
				android:layout_centerHorizontal="true"
				android:textSize="18sp"
				style="@style/MyButtonTheme"
				android:layout_below="@+id/_create_account_"
				android:layout_marginLeft="140dp"
				android:layout_marginTop="-10dp"
				android:layout_width="match_parent"
				android:layout_height="50dp"
				android:background="@drawable/_btn_burgundy_stroke"  />

			<TextView android:id="@+id/text1"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center_horizontal|center"
				android:layout_marginTop="20dp"
				android:layout_marginLeft="50dp"
				android:gravity="center"
				android:layout_below="@+id/sign_in_button"
				android:text="Continue as a guest"
				android:textColor="@color/lightbrown"
				android:textSize="16sp" />

			<Button android:id="@+id/continueBtn"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center_horizontal|center"
				android:layout_alignParentRight="true"
				android:layout_marginTop="8dp"
				android:gravity="center"
				style="@style/MyButtonTheme"
				android:layout_below="@+id/sign_in_button"
				android:background="@color/transparent"
				android:text="Continue"
				android:layout_marginRight="60dp"
				android:textColor="@color/purple_700"
				android:textSize="15sp" />

			<TextView android:id="@+id/or"
				android:layout_gravity="center_horizontal|center"
				android:gravity="center"
				android:layout_centerHorizontal="true"
				android:textSize="35sp"
				android:layout_below="@id/text1"
				android:textColor="@color/sign_in_color"
				android:layout_marginTop="20dp"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/or_string"
				/>

			<ImageView android:id="@+id/icons8_facebook_240_1"
				android:src="@drawable/icons8_facebook_240_1"
				android:layout_marginLeft="0dp"
				android:layout_toRightOf="@+id/or"
				android:layout_below="@+id/or"
				android:layout_marginTop="10dp"
				android:layout_width="40dp"
				android:layout_height="40dp" />

			<ImageView
				android:id="@+id/icons8_google_240_1"
				android:layout_width="40dp"
				android:layout_height="40dp"
				android:layout_toLeftOf="@+id/or"
				android:layout_below="@+id/or"
				android:layout_marginTop="10dp"
				android:contentDescription="icons8_google_240_1"
				android:src="@drawable/icons8_google_240_1" />

			<Button android:id="@+id/forgot_password_"
				android:textStyle="bold"
				android:layout_gravity="center_horizontal|center"
				android:gravity="top"
				android:textSize="13sp"
				android:layout_below="@+id/password"
				android:textColor="@color/lightbrown"
				android:layout_alignParentRight="true"
				android:layout_marginRight="50dp"
				android:layout_marginTop="10dp"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/forgot_password__string"
				android:theme="@style/MyButtonTheme"
				android:background="@color/transparent"
				 />

			<Button android:id="@+id/_create_account_"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="top"
				android:layout_marginLeft="50dp"
				android:layout_marginTop="10dp"
				android:layout_below="@+id/password"
				android:background="@color/transparent"
				android:gravity="top"
				android:text="@string/_create_account__string"
				android:textColor="@color/lightbrown"
				android:textSize="13sp"
				android:theme="@style/MyButtonTheme"
				android:textStyle="bold" />



		</RelativeLayout>

	</RelativeLayout>
</RelativeLayout>