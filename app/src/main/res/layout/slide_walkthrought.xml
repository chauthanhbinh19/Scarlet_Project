<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/rectangle_gradient_burgundy"
    android:layout_height="match_parent">

    <ImageView android:layout_centerHorizontal="true"
        android:background="@drawable/rectangle_circie_gradient_burgundy"
        android:layout_marginTop="40dp"
        android:layout_width="310dp"
        android:layout_height="310dp" />
    <ImageView android:id="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="75dp"
        android:layout_width="240dp"
        android:layout_height="240dp" />

    <TextView android:id="@+id/titleTextView"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/imageView"
        android:text="Welcome"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="60dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView android:id="@+id/descriptionTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:layout_marginLeft="60dp"
        android:layout_below="@id/titleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView android:id="@+id/step1"
            android:background="@drawable/rectangle_circle_white"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_width="8dp"
            android:layout_height="8dp"/>
        <ImageView android:id="@+id/step2"
            android:background="@drawable/rectangle_circle_gray"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_width="8dp"
            android:layout_height="8dp"/>
        <ImageView android:id="@+id/step3"
            android:background="@drawable/rectangle_circle_gray"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_width="8dp"
            android:layout_height="8dp"/>
        <ImageView android:id="@+id/step4"
            android:background="@drawable/rectangle_circle_gray"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_width="8dp"
            android:layout_height="8dp"/>
    </LinearLayout>
