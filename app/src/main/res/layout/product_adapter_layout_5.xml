<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >

        <View   android:id="@+id/rectangle_9"
            android:background="@drawable/_bg__white"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:elevation="9dp"
            android:layout_width="match_parent"
            android:layout_height="100dp" />

        <ImageView android:id="@+id/mask_group"
            android:layout_marginStart="16dp"
            android:layout_marginTop="10dp"
            android:layout_width="80dp"
            android:elevation="10dp"
            android:background="@drawable/rectangle_lightpink_radius"
            android:layout_height="80dp" />

        <ImageView android:id="@+id/product_image"
            android:src="@drawable/dsc02313_optimized"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:elevation="10dp"
            android:layout_width="75dp"
            android:layout_height="75dp" />

        <ImageView android:id="@+id/product_category_icon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:elevation="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/product_image"
            />

        <TextView android:id="@+id/product_name"
            android:textStyle="bold"
            android:textSize="14sp"
            android:elevation="10dp"
            android:textColor="@color/burgundy"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/product_category_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="120dp"
            android:text="@string/black_coffee_string"
            android:singleLine="true"
            />

        <TextView android:id="@+id/product_price"
            android:textStyle="bold"
            android:textSize="16sp"
            android:elevation="10dp"
            android:textColor="@color/black"
            android:layout_marginLeft="22dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/product_image"
            android:layout_below="@id/product_name"
            android:layout_marginTop="20dp"
            android:text="@string/_120_000__string"
            />

        <CheckBox android:id="@+id/checkboxBtn"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:elevation="10dp"
            android:scaleX="1.2"
            android:scaleY="1.2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>
