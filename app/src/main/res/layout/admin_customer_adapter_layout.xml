<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    android:layout_marginBottom="4dp"
    android:padding="2dp"
    android:layout_width="match_parent"
    android:layout_height="120dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:elevation="4dp"
        android:layout_margin="4dp"
        android:outlineAmbientShadowColor="@color/burgundy"
        android:layout_centerHorizontal="true"
        android:background="@drawable/rectangle_circle_white_2">

        <ImageView
            android:layout_width="44dp"
            android:layout_height="140dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/rectangle_circle_burgundy_2"/>

        <ImageView android:id="@+id/btnEdit"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="15dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/editing"/>

        <ImageView android:id="@+id/btnDelete"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="15dp"
            android:visibility="gone"
            android:background="@drawable/bin_2"/>
    </RelativeLayout>

    <ImageView android:id="@+id/icon"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="20dp"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:elevation="4dp"
        android:layout_centerVertical="true"
        android:src="@drawable/rabbit"/>

    <TextView android:id="@+id/name_customer"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="24dp"
        android:layout_width="wrap_content"
        android:maxWidth="150dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_toRightOf="@+id/icon"
        android:textSize="18sp"
        android:elevation="10dp"
        android:textStyle="bold"
        android:singleLine="true"
        android:gravity="center_horizontal"
        android:textColor="@color/burgundy"
        android:text="User 1"/>

    <ImageView android:id="@+id/search_product"
        android:layout_marginTop="28dp"
        android:layout_marginLeft="10dp"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_toRightOf="@+id/name_customer"
        android:elevation="10dp"
        android:gravity="center_horizontal"
        android:background="@drawable/search_1"/>

    <TextView android:id="@+id/phone_customer"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/name_customer"
        android:layout_toRightOf="@+id/icon"
        android:textSize="14sp"
        android:elevation="10dp"
        android:gravity="center_horizontal"
        android:textColor="@color/black"
        android:text="0907123456"/>

    <TextView android:id="@+id/email_customer"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/phone_customer"
        android:layout_toRightOf="@+id/icon"
        android:textSize="14sp"
        android:elevation="10dp"
        android:gravity="center_horizontal"
        android:textColor="@color/black"
        android:text="testing1@gmail.com"/>
</RelativeLayout>

