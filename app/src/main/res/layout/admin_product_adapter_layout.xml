<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    android:layout_marginBottom="4dp"
    android:padding="2dp"
    android:layout_width="match_parent"
    android:layout_height="150dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:elevation="4dp"
        android:layout_margin="4dp"
        android:outlineAmbientShadowColor="@color/burgundy"
        android:layout_centerHorizontal="true"
        android:background="@drawable/rectangle_circle_white_2">

        <ImageView
            android:layout_width="44dp"
            android:layout_height="150dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/rectangle_circle_burgundy_2"/>

        <ImageView android:id="@+id/btnEdit"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/editing"/>

        <ImageView android:id="@+id/btnDelete"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="20dp"
            android:background="@drawable/bin_2"/>
    </RelativeLayout>

    <ImageView android:id="@+id/icon"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="20dp"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:elevation="4dp"
        android:layout_centerVertical="true"
        android:background="@drawable/rectangle_lightpink_radius"
        android:src="@drawable/bacon_cheese_onion"/>

    <TextView android:id="@+id/name_product"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="24dp"
        android:layout_width="wrap_content"
        android:maxWidth="150dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_toRightOf="@+id/icon"
        android:textSize="18sp"
        android:elevation="10dp"
        android:textStyle="bold"
        android:singleLine="true"
        android:gravity="center_horizontal"
        android:textColor="@color/burgundy"
        android:text="Drinks"/>

    <TextView android:id="@+id/price_product"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/name_product"
        android:layout_toRightOf="@+id/icon"
        android:textSize="16sp"
        android:elevation="10dp"
        android:gravity="center_horizontal"
        android:textColor="@color/black"
        android:text="20000Ä‘"/>

    <TextView android:id="@+id/point_product"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/price_product"
        android:layout_toRightOf="@+id/icon"
        android:textSize="16sp"
        android:elevation="10dp"
        android:gravity="center_horizontal"
        android:textColor="@color/yellow"
        android:text="Point: 100"/>

    <TextView android:id="@+id/detail_product"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/point_product"
        android:layout_toRightOf="@+id/icon"
        android:textSize="16sp"
        android:elevation="10dp"
        android:gravity="center_horizontal"
        android:textColor="@color/lightbrown"
        android:text="Details"/>
</RelativeLayout>

