<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="6dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="7dp"
        android:background="@drawable/rectangle_lightpink_radius_2">

        <RelativeLayout android:id="@+id/imageBox"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/rectangle_circle_linkwhite_500">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@drawable/cake_11"/>
        </RelativeLayout>
        <TextView android:id="@+id/order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/imageBox"
            android:text="Your order"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"/>
        <TextView android:id="@+id/dateText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/imageBox"
            android:text="Date:"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_below="@+id/order"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="20dp"/>
        <TextView android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="dd-MM-yyyy"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_below="@+id/order"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"/>
        <TextView android:id="@+id/item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/imageBox"
            android:text="3 items"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_below="@+id/dateText"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="20dp"/>
        <TextView android:id="@+id/total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/unit"
            android:text="0"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_below="@+id/dateText"
            android:layout_marginTop="5dp"
            android:layout_marginRight="2dp"/>
        <TextView android:id="@+id/unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="Ä‘"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_below="@+id/dateText"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"/>
        <TextView android:id="@+id/detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/imageBox"
            android:text="Detail"
            android:textColor="@color/lightgreen2"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_below="@+id/item"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="20dp"/>
        <TextView android:id="@+id/cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="Cancel"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/lightgreen2"
            android:layout_below="@+id/item"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"/>
        <TextView android:id="@+id/bar"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/detail"
            android:background="@color/burgundy"/>
        <ImageView android:id="@+id/icon"
            android:layout_below="@+id/bar"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/fast_delivery_2"/>
        <TextView android:id="@+id/textContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/burgundy"
            android:textStyle="bold"
            android:layout_below="@+id/bar"
            android:layout_toRightOf="@+id/icon"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:text="Order is being prepared"/>
    </RelativeLayout>
</RelativeLayout>