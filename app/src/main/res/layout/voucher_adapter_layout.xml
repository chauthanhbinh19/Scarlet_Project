<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="110dp"
        android:layout_marginBottom="5dp"
        >

        <View   android:id="@+id/rectangle_9"
            android:background="@drawable/rectangle_circle_white_2"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:layout_width="match_parent"
            android:layout_height="110dp" />
        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="-8dp"
            android:layout_alignParentTop="true"
            android:background="@drawable/rectangle_circle_white"/>
        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginLeft="120dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="-8dp"
            android:background="@drawable/rectangle_circle_white"/>
        <ImageView
            android:layout_width="7dp"
            android:layout_height="7dp"
            android:layout_marginLeft="124dp"
            android:layout_marginTop="15dp"
            android:layout_alignParentTop="true"
            android:background="@drawable/rectangle_circle_white"/>
        <ImageView
            android:layout_width="7dp"
            android:layout_height="7dp"
            android:layout_marginLeft="124dp"
            android:layout_marginTop="30dp"
            android:layout_alignParentTop="true"
            android:background="@drawable/rectangle_circle_white"/>
        <ImageView
            android:layout_width="7dp"
            android:layout_height="7dp"
            android:layout_marginLeft="124dp"
            android:layout_marginTop="45dp"
            android:layout_alignParentTop="true"
            android:background="@drawable/rectangle_circle_white"/>
        <ImageView
            android:layout_width="7dp"
            android:layout_height="7dp"
            android:layout_marginLeft="124dp"
            android:layout_marginTop="60dp"
            android:layout_alignParentTop="true"
            android:background="@drawable/rectangle_circle_white"/>
        <ImageView
            android:layout_width="7dp"
            android:layout_height="7dp"
            android:layout_marginLeft="124dp"
            android:layout_marginTop="75dp"
            android:layout_alignParentTop="true"
            android:background="@drawable/rectangle_circle_white"/>
        <ImageView
            android:layout_width="7dp"
            android:layout_height="7dp"
            android:layout_marginLeft="124dp"
            android:layout_marginTop="90dp"
            android:layout_alignParentTop="true"
            android:background="@drawable/rectangle_circle_white"/>
        <ImageView
            android:layout_width="7dp"
            android:layout_height="7dp"
            android:layout_marginLeft="124dp"
            android:layout_marginTop="105dp"
            android:layout_alignParentTop="true"
            android:background="@drawable/rectangle_circle_white"/>
        <ImageView
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:elevation="11dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/rectangle_lightpink_radius"
            android:layout_centerVertical="true"/>


        <ImageView
            android:layout_width="90dp"
            android:layout_height="19dp"
            android:elevation="11dp"
            android:layout_marginLeft="18dp"
            android:background="@color/burgundy"
            android:layout_marginTop="18dp"/>

        <ImageView android:id="@+id/delivery_method_icon"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:elevation="11dp"
            android:layout_marginLeft="92dp"
            android:background="@drawable/delivery_bike"
            android:layout_marginTop="14dp"/>

        <TextView android:id="@+id/delivery_method"
            android:layout_width="90dp"
            android:layout_height="18dp"
            android:elevation="11dp"
            android:layout_marginLeft="13dp"
            android:text="Delivery"
            android:gravity="center"
            android:textColor="@color/white"
            android:layout_marginTop="17dp"/>

        <TextView android:id="@+id/discount"
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:layout_marginLeft="25dp"
            android:text="40%"
            android:elevation="11dp"
            android:gravity="center"
            android:textSize="38sp"
            android:textColor="@color/burgundy"
            android:layout_marginTop="32dp"/>

        <TextView android:id="@+id/voucher_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:elevation="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="150dp"
            android:text="Voucher number 1"/>

        <TextView android:id="@+id/voucher_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:elevation="10dp"
            android:textColor="@color/burgundy"
            android:layout_marginBottom="25dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="150dp"
            android:text="Expires in 2 days"/>
    </RelativeLayout>
