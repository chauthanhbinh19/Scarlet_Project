<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="10dp"
    android:padding="2dp"
    android:background="@color/transparent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:background="@drawable/_bg_white_radius30"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="50dp">

        <ImageButton android:id="@+id/btnClose"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:background="@drawable/close"/>

        <TextView android:id="@+id/name"
            android:layout_below="@+id/btnClose"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add new product"
            android:textColor="@color/burgundy"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/proName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name"
            android:layout_marginStart="50dp"
            android:layout_marginTop="10dp"
            android:textSize="16sp"
            android:textColor="@color/burgundy"
            android:textStyle="bold"
            android:text="Product Name:"
            />
        <EditText android:id="@+id/productName"
            android:layout_below="@+id/proName"
            android:layout_centerHorizontal="true"
            android:layout_marginRight="80dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/rectangle_lightpink_radius"
            android:layout_width="match_parent"
            android:paddingLeft="30dp"
            android:layout_height="45dp"/>
        <TextView
            android:id="@+id/proPoint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/productName"
            android:layout_marginStart="50dp"
            android:layout_marginTop="10dp"
            android:textSize="16sp"
            android:textColor="@color/burgundy"
            android:textStyle="bold"
            android:text="Product Point:"
            />

        <EditText android:id="@+id/productPoint"
            android:layout_below="@+id/proPoint"
            android:layout_centerHorizontal="true"
            android:layout_marginRight="80dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/rectangle_lightpink_radius"
            android:layout_width="match_parent"
            android:paddingLeft="30dp"
            android:layout_height="45dp"/>

        <TextView
            android:id="@+id/proPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/productPoint"
            android:layout_marginStart="50dp"
            android:layout_marginTop="10dp"
            android:textSize="16sp"
            android:textColor="@color/burgundy"
            android:textStyle="bold"
            android:text="Product Price:"
            />

        <EditText android:id="@+id/productPrice"
            android:layout_below="@+id/proPrice"
            android:layout_centerHorizontal="true"
            android:layout_marginRight="80dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/rectangle_lightpink_radius"
            android:layout_width="match_parent"
            android:paddingLeft="30dp"
            android:layout_height="45dp"/>

        <TextView
            android:id="@+id/proDes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/productPrice"
            android:layout_marginStart="50dp"
            android:layout_marginTop="10dp"
            android:textSize="16sp"
            android:textColor="@color/burgundy"
            android:textStyle="bold"
            android:text="Product Description:"
            />

        <EditText android:id="@+id/productDescription"
            android:layout_below="@+id/proDes"
            android:layout_centerHorizontal="true"
            android:layout_marginRight="80dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/rectangle_lightpink_radius"
            android:layout_width="match_parent"
            android:paddingLeft="30dp"
            android:layout_height="45dp"/>

        <TextView
            android:id="@+id/proCat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/productDescription"
            android:layout_marginStart="50dp"
            android:layout_marginTop="10dp"
            android:textSize="16sp"
            android:textColor="@color/burgundy"
            android:textStyle="bold"
            android:text="Product Category:"
            />


        <Spinner android:id="@+id/productCategory"
            android:layout_below="@+id/proCat"
            android:layout_centerHorizontal="true"
            android:layout_marginRight="80dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/rectangle_lightpink_radius"
            android:layout_width="match_parent"
            android:hint="Product description"
            android:paddingLeft="22dp"
            android:textColorHint="@color/burgundy"
            android:layout_height="45dp"/>
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/chevron"
            android:layout_below="@+id/proCat"
            android:layout_alignParentRight="true"
            android:layout_marginRight="50dp"
            android:layout_marginTop="20dp"
            />

        <ImageView android:id="@+id/btnImage"
            android:layout_centerHorizontal="true"
            android:layout_marginRight="80dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/picture"
            android:layout_below="@+id/productCategory"
            android:layout_width="match_parent"
            android:layout_height="80dp"/>

        <TextView android:id="@+id/btnImageError"
            android:layout_below="@+id/btnImage"
            android:layout_centerHorizontal="true"
            android:layout_marginRight="80dp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:paddingLeft="30dp"
            android:visibility="gone"
            android:textColor="@color/red"
            android:layout_height="wrap_content"/>

        <Button android:id="@+id/btnSave"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@drawable/rectangle_burgundy_radius"
            android:textColor="@color/white"
            android:layout_marginRight="140dp"
            android:layout_below="@+id/btnImageError"
            android:textSize="18sp"
            style="@style/MyButtonTheme"
            android:text="Save"/>
    </RelativeLayout>

</RelativeLayout>

