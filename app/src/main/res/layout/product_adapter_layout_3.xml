<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >

        <View   android:id="@+id/rectangle_9"
            android:background="@drawable/_bg__white"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:elevation="9dp"
            android:layout_width="match_parent"
            android:layout_height="100dp" />

        <ImageView android:id="@+id/mask_group"
            android:layout_marginStart="16dp"
            android:layout_marginTop="10dp"
            android:layout_width="80dp"
            android:elevation="10dp"
            android:background="@drawable/rectangle_lightpink_radius"
            android:layout_height="80dp" />


        <ImageView android:id="@+id/product_image"
            android:src="@drawable/dsc02313_optimized"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:elevation="10dp"
            android:layout_width="75dp"
            android:layout_height="75dp" />

        <RelativeLayout android:id="@+id/sizeBox"
            android:layout_marginTop="5dp"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:elevation="10dp"
            android:layout_marginLeft="86dp"
            android:background="@drawable/rectangle_circle_burgundy_3">
            <TextView android:id="@+id/size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:text="S"/>
        </RelativeLayout>

        <ImageView android:id="@+id/product_category_icon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:elevation="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/product_image"
            />

        <TextView android:id="@+id/product_name"
            android:textStyle="bold"
            android:textSize="14sp"
            android:elevation="10dp"
            android:textColor="@color/burgundy"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/product_category_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="120dp"
            android:text="@string/black_coffee_string"
            android:singleLine="true"
            />

        <ImageButton android:id="@+id/minus"
            android:layout_below="@+id/product_name"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:elevation="10dp"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/product_image"
            android:background="@drawable/minus_1"/>

        <TextView android:id="@+id/product_quantity_text"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:layout_toRightOf="@id/minus"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="38dp"
            android:layout_below="@id/product_name"
            android:layout_width="wrap_content"
            android:layout_height="24.2dp"
            android:maxWidth="140dp"
            android:text="1"
            android:elevation="10dp"
            android:singleLine="true"
            />

        <ImageButton android:id="@+id/plus"
            android:layout_below="@+id/product_name"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="16dp"
            android:elevation="10dp"
            android:layout_toRightOf="@id/product_quantity_text"
            android:background="@drawable/plus_1"/>

        <TextView android:id="@+id/product_price"
            android:textStyle="bold"
            android:textSize="16sp"
            android:elevation="10dp"
            android:textColor="@color/black"
            android:layout_marginLeft="22dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/product_image"
            android:layout_below="@id/product_name"
            android:layout_marginTop="8dp"
            android:text="@string/_120_000__string"
            />

        <ImageView android:id="@+id/delete_btn"
            android:src="@drawable/delete"
            android:elevation="10dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="40dp"
            android:layout_marginRight="20dp"
            android:layout_width="30dp"
            android:layout_height="30dp" />

    </RelativeLayout>
