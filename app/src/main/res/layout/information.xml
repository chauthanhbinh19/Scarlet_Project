<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	xmlns:app="http://schemas.android.com/apk/res-auto">



	<RelativeLayout android:id="@+id/top_bar"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="@color/white"
		app:layout_constraintTop_toTopOf="parent"
		app:layout_constraintRight_toRightOf="parent"
		app:layout_constraintLeft_toLeftOf="parent">

		<RelativeLayout android:id="@+id/back_btn"
			android:layout_marginTop="22dp"
			android:layout_marginStart="25dp"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			>

			<View   android:id="@+id/rectangle_3"
				android:background="@drawable/btn_burgundy"
				android:layout_marginStart="0dp"
				android:layout_marginTop="0dp"
				android:layout_width="45dp"
				android:layout_height="40dp" />


			<ImageView android:id="@+id/vector"
				android:src="@drawable/vector"
				android:contentDescription="vector"
				android:layout_centerHorizontal="true"
				android:layout_centerVertical="true"
				android:layout_width="15dp"
				android:layout_height="15dp" />




		</RelativeLayout>

		<RelativeLayout android:id="@+id/total_box"
			android:layout_marginTop="20dp"
			android:paddingTop="5dp"
			android:paddingBottom="5dp"
			android:paddingLeft="20dp"
			android:paddingRight="20dp"
			android:layout_below="@+id/back_btn"
			android:layout_width="match_parent"
			android:layout_height="wrap_content">

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textColor="@color/burgundy"
				android:textStyle="bold"
				android:textSize="16sp"
				android:text="Total"/>

			<TextView android:id="@+id/total"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="0"
				android:layout_toLeftOf="@+id/unit"
				android:textSize="16sp"
				android:textColor="@color/burgundy"
				android:textStyle="bold"/>
			<TextView android:id="@+id/unit"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Ä‘"
				android:layout_alignParentRight="true"
				android:textSize="16sp"
				android:textColor="@color/burgundy"
				android:textStyle="bold"/>
			<ImageView
				android:layout_width="match_parent"
				android:layout_height="1dp"
				android:layout_marginTop="15dp"
				android:layout_below="@+id/total"
				android:background="@color/burgundy"/>
		</RelativeLayout>

		<TextView android:id="@+id/information"
			android:textStyle="bold"
			android:layout_gravity="center_horizontal|center"
			android:gravity="center"
			android:layout_centerHorizontal="true"
			android:textSize="20sp"
			android:textColor="@color/black"
			android:layout_marginLeft="124dp"
			android:layout_marginTop="28dp"
			android:layout_width="113dp"
			android:layout_height="33dp"
			android:text="Information"
			/>


		<TextView android:id="@+id/cart_ek1"
			android:layout_gravity="center_horizontal|center"
			android:gravity="center"
			android:textSize="14sp"
			android:textColor="@color/burgundy"
			android:layout_marginLeft="20dp"
			android:layout_marginTop="10dp"
			android:layout_below="@+id/total_box"
			android:layout_width="wrap_content"
			android:layout_height="31.4dp"
			android:text="@string/cart_ek1_string"
			/>

		<TextView android:id="@+id/information_ek1"
			android:textStyle="bold"
			android:layout_gravity="center_horizontal|center"
			android:gravity="center"
			android:textSize="13sp"
			android:textColor="@color/burgundy"
			android:layout_toRightOf="@+id/right_arrow_1"
			android:layout_marginTop="10dp"
			android:layout_below="@+id/total_box"
			android:layout_width="wrap_content"
			android:layout_height="31.3dp"
			android:text="Information"
			/>

		<TextView android:id="@+id/delivery_ek1"
			android:layout_gravity="center_horizontal|center"
			android:gravity="center"
			android:textSize="13sp"
			android:textColor="@color/lightbrown"
			android:layout_toRightOf="@+id/right_arrow_2"
			android:layout_marginTop="10dp"
			android:layout_below="@+id/total_box"
			android:layout_width="wrap_content"
			android:layout_height="31.3dp"
			android:text="@string/delivery_ek1_string"
			/>

		<TextView android:id="@+id/payment"
			android:textStyle="bold"
			android:layout_gravity="center_horizontal|center"
			android:gravity="center"
			android:textSize="14sp"
			android:textColor="@color/lightbrown"
			android:layout_toRightOf="@+id/right_arrow_3"
			android:layout_marginTop="10dp"
			android:layout_below="@+id/total_box"
			android:layout_width="wrap_content"
			android:layout_height="31.4dp"
			android:text="@string/payment_string"
			/>

		<ImageView android:id="@+id/right_arrow_1"
			android:src="@drawable/right_arrow_1"
			android:contentDescription="right_arrow_1"
			android:layout_toRightOf="@+id/cart_ek1"
			android:layout_marginTop="18dp"
			android:layout_below="@+id/total_box"
			android:layout_marginLeft="5dp"
			android:layout_marginRight="5dp"
			android:layout_width="15dp"
			android:layout_height="15dp" />

		<ImageView android:id="@+id/right_arrow_2"
			android:src="@drawable/right_arrow_2"
			android:contentDescription="right_arrow_2"
			android:layout_toRightOf="@+id/information_ek1"
			android:layout_marginTop="18dp"
			android:layout_marginLeft="5dp"
			android:layout_marginRight="5dp"
			android:layout_below="@+id/total_box"
			android:layout_width="15dp"
			android:layout_height="15dp" />

		<ImageView android:id="@+id/right_arrow_3"
			android:src="@drawable/right_arrow_2"
			android:contentDescription="right_arrow_2"
			android:layout_toRightOf="@+id/delivery_ek1"
			android:layout_marginTop="18dp"
			android:layout_marginLeft="5dp"
			android:layout_marginRight="5dp"
			android:layout_below="@+id/total_box"
			android:layout_width="15dp"
			android:layout_height="15dp" />

	</RelativeLayout>
	<ScrollView android:id="@+id/delivery"
		app:layout_constraintTop_toBottomOf="@+id/top_bar"
		android:layout_width="match_parent"
		android:layout_height="wrap_content" >

		<RelativeLayout android:id="@+id/content_container"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:paddingBottom="50dp"
			android:background="@color/white">


			<RelativeLayout android:id="@+id/frame_7"
				android:layout_marginTop="10dp"
				android:layout_marginStart="0dp"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				>

				<TextView android:id="@+id/delivery_method"
					android:textStyle="bold"
					android:textSize="20sp"
					android:textColor="@color/black"
					android:layout_marginLeft="23dp"
					android:layout_marginTop="5dp"
					android:layout_width="193dp"
					android:layout_height="33dp"
					android:text="@string/delivery_method_string"
					/>

				<RelativeLayout android:id="@+id/delivery_box"
					android:layout_below="@+id/delivery_method"
					android:layout_marginRight="20dp"
					android:layout_marginLeft="20dp"
					android:layout_marginBottom="5dp"
					android:layout_marginTop="5dp"
					android:padding="10dp"
					android:background="@drawable/rectangle_white_stroke"
					android:layout_width="match_parent"
					android:layout_height="wrap_content">

					<RadioButton android:id="@+id/delivery_radio_btn"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:checked="true"
						/>

					<RadioButton android:id="@+id/pickup_radio_btn"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginTop="50dp"
						/>

					<ImageView android:id="@+id/delivery_icon"
						android:layout_width="30dp"
						android:layout_height="30dp"
						android:layout_marginLeft="5dp"
						android:layout_marginRight="5dp"
						android:layout_toRightOf="@+id/delivery_radio_btn"
						android:background="@drawable/fast_delivery_1"/>

					<ImageView android:id="@+id/pickup_icon"
						android:layout_width="30dp"
						android:layout_height="30dp"
						android:layout_marginTop="48dp"
						android:layout_marginLeft="5dp"
						android:layout_marginRight="5dp"
						android:layout_toRightOf="@+id/delivery_radio_btn"
						android:background="@drawable/shop_1"/>

					<TextView android:id="@+id/delivery_text"
						android:layout_width="match_parent"
						android:layout_height="match_parent"
						android:text="Delivery"
						android:layout_marginTop="4dp"
						android:layout_toRightOf="@+id/delivery_icon"
						android:textColor="@color/black"
						android:textSize="18sp"
						android:textStyle="bold" />

					<TextView
						android:layout_width="match_parent"
						android:layout_height="match_parent"
						android:text="Pick up"
						android:layout_marginTop="24dp"
						android:layout_below="@+id/delivery_text"
						android:layout_toRightOf="@+id/pickup_icon"
						android:textColor="@color/black"
						android:textSize="18sp"
						android:textStyle="bold" />
				</RelativeLayout>

				<TextView android:id="@+id/delivery_address"
					android:textStyle="bold"
					android:textSize="20sp"
					android:layout_below="@+id/delivery_box"
					android:textColor="@color/black"
					android:layout_marginLeft="23dp"
					android:layout_marginTop="25dp"
					android:layout_width="193dp"
					android:layout_height="33dp"
					android:text="Delivery address"
					/>

				<EditText android:id="@+id/street"
					android:layout_marginRight="20dp"
					android:layout_marginLeft="20dp"
					android:paddingLeft="15dp"
					android:paddingBottom="14dp"
					android:paddingTop="14dp"
					android:textSize="16sp"
					android:background="@drawable/rectangle_white_stroke"
					android:layout_below="@+id/delivery_address"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:hint="Street"/>

				<EditText android:id="@+id/ward"
					android:layout_marginRight="20dp"
					android:layout_marginLeft="20dp"
					android:paddingLeft="15dp"
					android:paddingBottom="14dp"
					android:paddingTop="14dp"
					android:textSize="16sp"
					android:layout_marginTop="14dp"
					android:background="@drawable/rectangle_white_stroke"
					android:layout_below="@+id/street"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:hint="Ward"/>

				<EditText android:id="@+id/district"
					android:layout_marginRight="20dp"
					android:layout_marginLeft="20dp"
					android:paddingLeft="15dp"
					android:paddingBottom="14dp"
					android:paddingTop="14dp"
					android:textSize="16sp"
					android:layout_marginTop="14dp"
					android:background="@drawable/rectangle_white_stroke"
					android:layout_below="@+id/ward"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:hint="District"/>

				<EditText android:id="@+id/province"
					android:layout_marginRight="20dp"
					android:layout_marginLeft="20dp"
					android:paddingLeft="15dp"
					android:paddingBottom="14dp"
					android:paddingTop="14dp"
					android:textSize="16sp"
					android:layout_marginTop="14dp"
					android:background="@drawable/rectangle_white_stroke"
					android:layout_below="@+id/district"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:hint="Province"/>

				<EditText android:id="@+id/postalCode"
					android:layout_marginRight="20dp"
					android:layout_marginLeft="20dp"
					android:paddingLeft="15dp"
					android:paddingBottom="14dp"
					android:paddingTop="14dp"
					android:textSize="16sp"
					android:layout_marginTop="14dp"
					android:background="@drawable/rectangle_white_stroke"
					android:layout_below="@+id/province"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:hint="Postal Code"/>

				<EditText android:id="@+id/addtionalInfo"
					android:layout_marginRight="20dp"
					android:layout_marginLeft="20dp"
					android:paddingLeft="15dp"
					android:paddingBottom="14dp"
					android:paddingTop="14dp"
					android:textSize="16sp"
					android:layout_marginTop="14dp"
					android:background="@drawable/rectangle_white_stroke"
					android:layout_below="@+id/postalCode"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:hint="Addtional Information"/>

				<Button   android:id="@+id/continue_btn"
					android:background="@drawable/rectangle_burgundy_radius"
					android:layout_marginStart="70dp"
					android:layout_marginTop="30dp"
					android:layout_width="300dp"
					android:layout_height="48dp"
					android:layout_below="@+id/addtionalInfo"
					android:textStyle="bold"
					android:layout_gravity="center_horizontal|center"
					android:layout_centerHorizontal="true"
					android:gravity="center"
					android:textSize="18sp"
					android:textColor="@color/white"
					android:theme="@style/MyButtonTheme"
					android:text="Continue to delivery"/>
			</RelativeLayout>


		</RelativeLayout>

	</ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>