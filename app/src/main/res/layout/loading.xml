            android:layout_height="wrap_content" >

            <View   android:id="@+id/_bg___loading"
                android:background="@drawable/_bg___loading_shape"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />


            <RelativeLayout android:id="@+id/frame_1"
                android:layout_marginTop="224dp"
                android:layout_marginStart="0dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                >

                <View
                    android:id="@+id/_bg__frame_1_ek1"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="0dp"
                    android:background="@drawable/_bg__lightpink" />

                <TextView
                    android:layout_width="300dp"
                    android:layout_height="230dp"
                    android:background="@drawable/scartet_1"
                    android:layout_centerHorizontal="true"/>

            </RelativeLayout>

            <ImageView
                android:id="@+id/croissant__1__1"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginStart="169dp"
                android:layout_marginTop="700dp"
                android:contentDescription="croissant__1__1"
                android:src="@drawable/croissant__1__1" />

            <ImageView
                android:id="@+id/cake_2"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginStart="23dp"
                android:layout_marginTop="580dp"

                android:src="@drawable/cake_2" />

            <ImageView android:id="@+id/cold_coffee_1"
                android:src="@drawable/cold_coffee_1"
                android:contentDescription="cold_coffee_1"
                android:layout_marginStart="150dp"
                android:layout_marginTop="125dp"
                android:layout_width="80dp"
                android:layout_height="80dp" />

            <ImageView android:id="@+id/cake_1"
                android:src="@drawable/cake_1"
                android:contentDescription="cake_1"
                android:layout_marginStart="280dp"
                android:layout_marginTop="590dp"
                android:layout_width="80dp"
                android:layout_height="78.24dp" />

            <ImageView android:id="@+id/piece_of_cake_1"
                android:src="@drawable/piece_of_cake_1"
